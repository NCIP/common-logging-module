<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>

<!--
     This is a blank Validator form file with a commented examples.
-->

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <formset>


        <form name="queryForm">
            <field
                property="startDate"
                depends="date">
                <msg
                    name="date"
                    key="query.date.msg"/>
                <arg0 key="query.startDate" />
                <var>
                   <var-name>datePatternStrict</var-name>
                   <var-value>MM/dd/yyyy</var-value>
                </var>
            </field>
            <field
                property="endDate"
                depends="date">
                <msg
                    name="date"
                    key="query.date.msg"/>
                <arg0 key="query.endDate" />
                <var>
                   <var-name>datePatternStrict</var-name>
                   <var-value>MM/dd/yyyy</var-value>
                </var>
            </field>
               <field
                property="endTime"
                depends="date">
                <msg
                    name="date"
                    key="query.time.msg"/>
                <arg0 key="query.endTime" />
                <var>
                   <var-name>datePattern</var-name>
                   <var-value>h:mm a</var-value>
                </var>
            </field>
             <field
                property="startTime"
                depends="date">
                <msg
                    name="date"
                    key="query.time.msg"/>
                <arg0 key="query.startTime" />
                <var>
                   <var-name>datePattern</var-name>
                   <var-value>h:mm a</var-value>
                </var>
            </field>

              <field
                property="maxRecordCount"
                depends="integer,range">
                <arg0 key="query.maxRecordCount" />
                <arg1 name="range" key="${var:min}" resource="false" />
                <arg2 name="range" key="${var:max}" resource="false" />
                <var>
                    <var-name>min</var-name>
                    <var-value>1</var-value>
                </var>
                <var>
                     <var-name>max</var-name>
                     <var-value>9999</var-value>
                </var>
              </field>

        </form>


    </formset>

